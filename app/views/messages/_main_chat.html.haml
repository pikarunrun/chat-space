.chat-main
  .chat-main__header
    .chat-main__header__left
      .chat-main__header__left-box
        = @group.name
      .chat-main__header__left-box-text
        %ul.chat-main__header__left-box-text-member member :
        - @group.users.each do |user|
          %li.chat-main__header__left-box-text-member-list 
            = user.name
    .chat-main__header__right
      = link_to edit_group_path(@group) do
        Edit    
  .chat-main__message
    = render @messages

  .form
    = form_for [@group, @message],html: { class: "form__head" } do |f|
      .form__box
        = f.text_field :content, class: 'form__box-message', placeholder: 'type a message'
        = f.label :image, class: "form__box__box-image"  do
          = icon('fa', 'image')
          = f.file_field :image, class: "form__box-image__text" 
        = f.submit 'Send', class: 'form__box-submit'