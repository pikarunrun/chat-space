.side-bar
  .side-bar__header
    .side-bar__header-box
      = current_user.name
      .side-bar__header-box-left
      .side-bar__header-box-right
        = link_to new_group_path, class:"icon" do
          = icon('fa', 'edit')
        = link_to edit_user_path(current_user), class:"icon" do
          = icon('fa', 'cog')
      
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .side-bar__group-list__box
            .side-bar__group-list__box__name 
              = group.name
            .side-bar__group-list__box__comment 
              = group.show_last_message
          
